{% extends 'base.html.twig' %}

{% block body %}
    <h1>CrmContacto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ crmContacto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ crmContacto.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ crmContacto.apellido }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ crmContacto.telefono }}</td>
            </tr>
            <tr>
                <th>Emailid</th>
                <td>{{ crmContacto.emailId }}</td>
            </tr>
            <tr>
                <th>Numeromovil</th>
                <td>{{ crmContacto.numeroMovil }}</td>
            </tr>
            <tr>
                <th>Departamento</th>
                <td>{{ crmContacto.departamento }}</td>
            </tr>
            <tr>
