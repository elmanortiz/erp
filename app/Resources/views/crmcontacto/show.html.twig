                <td>{{ crmContacto.puesto }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_contacto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_contacto_edit', { 'id': crmContacto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
